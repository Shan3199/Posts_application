            <% if user_signed_in? %>
              <%= link_to 'Home', root_path,class: "navbar-brand" %>
              <div class="collapse navbar-collapse" id="navbarCollapse9">
                  <div class="collapse navbar-collapse">
                        <%= link_to 'Accounts', users_path(@users),class: "nav-item nav-link active" %>
        
                        <%= link_to 'Edit profile', edit_user_registration_path, class: 'nav-item nav-link active' %>
                 
