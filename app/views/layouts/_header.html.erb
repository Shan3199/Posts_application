              </form>
            <% end %>
          </div>       
             
  </nav>
</div>
<script>
  $(".hide-navbar").on({
    mouseenter: function(){
     $('.navbar').css("background-color", "lightgreen");
    },
    mouseleave: function(){
     $('.navbar').css('background-color', '#e3f2fd')
    },
  });

</script>